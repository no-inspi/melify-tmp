{
    "environments": {
      "development": {
        "frontend": {
          "NODE_ENV": "development",
          "PORT": "3000",
          "REACT_APP_API_URL": "http://localhost:8000"
        },
        "backend": {
          "NODE_ENV": "development",
          "PORT": "8000",
          "DATABASE_URL": "postgresql://localhost:5432/dev"
        },
        "scripts": {
          "PYTHON_ENV": "development",
          "LOG_LEVEL": "DEBUG"
        }
      },
      "production": {
        "frontend": {
          "NODE_ENV": "production",
          "PORT": "3000",
          "REACT_APP_API_URL": "https://api.example.com"
        },
        "backend": {
          "NODE_ENV": "production",
          "PORT": "8000",
          "DATABASE_URL": "${DATABASE_URL}"
        },
        "scripts": {
          "PYTHON_ENV": "production",
          "LOG_LEVEL": "INFO"
        }
      }
    },
    "shared": {
      "APP_NAME": "MyApp",
      "APP_VERSION": "1.0.0"
    }
  }