<html>
  <body>
    <!-- summary part -->
    {{#if isSummaryPresent}}
      <table
        width='100%'
        cellpadding='0'
        cellspacing='0'
        border='0'
        style='
        max-width: 570px;
        background: linear-gradient(
          to right,
          rgba(228, 82, 154, 0.4),
          rgba(124, 122, 185, 0.4)
        );
        border-radius: 8px;
        border: 1px solid #827ded;
        padding: 0px;
        padding-left: 5px;
        padding-right: 5px;
      '
      >
        <tr>
          <td colspan='2' style='font-weight: bold; font-size: 12px'>
            AI Forward Summary
          </td>
          <td
            colspan='2'
            style='font-size: 10px; color: #565864; text-align: right'
          >
            powered by
            <a
              href='https://melify.fr'
              target='_blank'
              style='text-decoration: underline; color: #4c8aff'
            >Melify</a>
          </td>
        </tr>
        <tr>
          <td
            colspan='2'
            style='font-size: 10px; padding-left: 5px; padding-top: 0px'
          >
            <p>{{threadSummary}}</p>
          </td>
        </tr>
      </table>
    {{/if}}

    <!-- forward part -->
    <table
      width='100%'
      cellpadding='0'
      cellspacing='0'
      border='0'
      style='margin-top: 10px'
    >
      <tr>
        <td>------ Forwarded message ------</td>
      </tr>
      {{#each thread}}
        <tr>
          <td>
            <table
              width='100%'
              cellpadding='0'
              cellspacing='0'
              border='0'
              style='
              max-width: 570px;
              color: black;
              background-color: #edede9;
              border-radius: 8px;
              padding: 12px;
              margin-top: 10px;
            '
            >
              <tr>
                <td style='font-size: 13px; font-weight: bold'>
                  From:
                  <b>{{{from}}}</b>
                </td>
                <td
                  rowspan='2'
                  colspan='2'
                  style='font-size: 13px; text-align: right'
                >
                  <i>{{date}}</i>
                </td>
              </tr>
              <tr>
                <td style='font-size: 12px'><b>To: </b> {{{to}}}</td>
              </tr>
              {{#if cc}}
                <tr>
                  <td style='font-size: 11px'><b>Cc:</b> {{{cc}}}</td>
                </tr>
              {{/if}}
              <tr>
                <td
                  colspan='2'
                  style='height: 10px; font-size: 0; line-height: 0'
                >
                  &nbsp;
                </td>
              </tr>
              <tr>
                <td colspan='2' style='font-size: 13px'>
                  <b>Subject:</b>
                  {{subject}}
                </td>
              </tr>
              <tr>
                <td
                  colspan='2'
                  style='height: 10px; font-size: 0; line-height: 0'
                >
                  &nbsp;
                </td>
              </tr>
              <tr>
                <td colspan='2'>
                  {{{html}}}
                  <!-- email content -->
                </td>
              </tr>
            </table>
          </td>
        </tr>
      {{/each}}
    </table>
  </body>
</html>